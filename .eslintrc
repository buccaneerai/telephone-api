{
  "env": {
    "browser": false,
    "node": true,
    "mocha": true
  },
  "extends": ["airbnb", "prettier"],
  "rules": {
    "arrow-body-style": 0,
    "arrow-parens": 0,
    "comma-dangle": 0,
    "comma-spacing": 0,
    "indent": 0,
    "no-plusplus": 0,
    "no-useless-escape": 0,
    "object-curly-spacing": 0,
    "object-curly-newline": 0,
    "no-nested-ternary": 0,
    "prefer-const": 0,
    "space-in-parens": 0,
    "linebreak-style": 0,
    "consistent-return": 1,
    "no-underscore-dangle": 0,
    "no-tabs": "error",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }]
  }
}
